{
  "name": "arcadeum",
  "version": "0.1.0",
  "description": "A framework for building Decentralized Games on Arcadeum.network",
  "repository": "https://github.com/horizon-games/arcadeum",
  "license": "(c) 2018-present Horizon Blockchain Games Inc.",
  "keywords": [
    "arcadeum",
    "dgame",
    "ethereum",
    "horizongames"
  ],
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "dev": "echo noop",
    "build": "yarn build:lib && yarn build:umd",
    "build:lib": "rm -rf ./dist/lib && tsc -p tsconfig.json",
    "build:umd": "rm -rf ./dist/umd && webpack --mode production --color --config config/webpack/webpack.config.dist.js",
    "build:clean": "rm -rf ./dist",
    "lint": "tslint -c tslint.json src/**/*.ts src/**/*.tsx test/**/*.ts",
    "test:watch": "jest --watchAll",
    "test": "jest --ci --runInBand"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "ethers": "3.0.7",
    "rxjs": "5.5.8"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "jest": "^22.4.3",
    "mock-socket": "^7.1.0",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.8.0-rc",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  }
}
