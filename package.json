{
  "private": true,
  "workspaces": [
    "client",
    "ethereum",
    "examples/*"
  ],
  "license": "none",
  "scripts": {
    "bootstrap": "yarn clean && yarn install && lerna bootstrap",
    "clean": "lerna clean --yes; rm -rf ./node_modules",
    "build": "yarn run bootstrap && lerna run build",
    "build:lib": "lerna run build:lib",
    "build:umd": "lerna run build:umd",
    "publish": "lerna build; lerna publish --registry=https://registry.npmjs.org/",
    "prettier": "prettier --write '**/*.{ts,tsx}'",
    "prettier:ci": "prettier --list-different '**/*.{ts,tsx}'",
    "lint": "lerna run lint",
    "testrpc": "cd ./ethereum && yarn testrpc",
    "testrpc:verbose": "cd ./ethereum && yarn testrpc:verbose",
    "migrate": "cd ./ethereum && yarn migrate",
    "test": "jest --ci --runInBand",
    "deploy-examples": "./deploy/deploy-examples.sh"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "lerna": "^2.9.0",
    "prettier": "^1.10.2",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "2.8.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  }
}
